{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Vite cuida da emiss√£o de arquivos
    "jsx": "react"
  },
  "include": ["*.tsx"], // Diz ao TypeScript para olhar arquivos na pasta src
  // Opcional, Vite pode criar isso para config do Node
}